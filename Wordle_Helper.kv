# main.py
#:import Factory kivy.factory.Factory
#:import RiseInTransition kivy.uix.screenmanager.RiseInTransition


ScreenManager:
	transition: RiseInTransition()

	Screen:
		name: 'Main'
		BoxLayout:
		    orientation: 'vertical'
		    BoxLayout:
		        orientation: 'horizontal'
		        size_hint_y: 0.125
                TextInput:
                    id: WordInput
                    hint_text: 'Enter 5 Letter Word'
                    multiline: False
                    on_text_validate: app.FillButtons()
                Button:
                    text: 'List'
                    size_hint_x: 0.25
                    #on_press: root.current = 'List'
                    on_release: app.List()
            ScrollView:
				size: self.size
				canvas.before:
					Color:
						rgb: (0.0053, 0.1373, 0.2013, 1)
					Rectangle:
						pos: self.pos
						size: self.size
				GridLayout:
					id: ButtonGrid
					size_hint_y: None
					height: self.minimum_height
					cols: 1
					row_default_height: 50
					BoxLayout:
					    orientation: 'horizontal'
					    id: WordFive
                        Button:
                            on_release: app.ButtonColor(4,5)
                            background_color: [1, 1, 1, 1.0]
                        Button:
                            on_release: app.ButtonColor(3,5)
                            background_color: [1, 1, 1, 1.0]
                        Button:
                            on_release: app.ButtonColor(2,5)
                            background_color: [1, 1, 1, 1.0]
                        Button:
                            on_release: app.ButtonColor(1,5)
                            background_color: [1, 1, 1, 1.0]
                        Button:
                            on_release: app.ButtonColor(0,5)
                            background_color: [1, 1, 1, 1.0]
					BoxLayout:
					    orientation: 'horizontal'
					    id: WordFour
                        Button:
                            on_release: app.ButtonColor(4,4)
                            background_color: [1, 1, 1, 1.0]
                        Button:
                            on_release: app.ButtonColor(3,4)
                            background_color: [1, 1, 1, 1.0]
                        Button:
                            on_release: app.ButtonColor(2,4)
                            background_color: [1, 1, 1, 1.0]
                        Button:
                            on_release: app.ButtonColor(1,4)
                            background_color: [1, 1, 1, 1.0]
                        Button:
                            on_release: app.ButtonColor(0,4)
                            background_color: [1, 1, 1, 1.0]
					BoxLayout:
					    orientation: 'horizontal'
					    id: WordThree
