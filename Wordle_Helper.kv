                        Button:
                            on_release: app.ButtonColor(0,3)
                            background_color: [1, 1, 1, 1.0]
					BoxLayout:
					    orientation: 'horizontal'
					    id: WordTwo
                        Button:
                            on_release: app.ButtonColor(4,2)
                            background_color: [1, 1, 1, 1.0]
                        Button:
                            on_release: app.ButtonColor(3,2)
                            background_color: [1, 1, 1, 1.0]
